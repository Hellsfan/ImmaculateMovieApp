@model IEnumerable<ImmaculateMovieApp.Models.Domain.Actor>
@{
}

<div class="tbl-container">
    <h2>Actors</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Movies with Actor</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model){
        <tr>
            <td>@item.Name</td>
            <td>@item.MovieNames</td>
            <td>
                <a href="/Actor/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="/Actor/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
     
    </table>
    <div class="input-container">
        <a href="/Actor/Add" class="btn btn-sec">Back</a>
    </div>
</div>
